x = float(input("введите x = "))
y = float(input("введите y = "))
z = input("выберите знак (+,-,*,/): ")

if z == '+':
    print(x+y)
elif z == '-':
    print(x-y)
elif z == '*':
    print(x*y)
elif z == '/':
    if y != 0:
        print(x/y)
    else:
        print("Деление на ноль!")
else:
    print("Неверный знак операции!")
